<div class="col-12 text-center">
  <h1>Reports</h1>
</div>

<div class="col-2"></div>
<div class="col-8">
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>User Report</th>
        <th>Title Post</th>
        <th>User Post</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @reports.each do |report| %>
        <tr>
          <td><%= User.where(id: report.user_id )[0].email %></td>
          <td><%= Post.where(id: report.post )[0].title %></td>
          <td><%= User.where(id: Post.where(id: report.post )[0].user_id)[0].email %></td>
          <td><%= link_to 'Show', report, :class => 'btn btn-info' %></td>
          <td><%= link_to 'Edit', edit_report_path(report), :class => 'btn btn-info' %></td>
          <td><%= link_to 'Destroy', report, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-info' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="col-2"></div>
<br>

<div class="col-12 text-center">
  <%= link_to 'New Report', new_report_path, :class => 'btn btn-info' %>
</div>
<div class="col-12">
  <br>
</div>
