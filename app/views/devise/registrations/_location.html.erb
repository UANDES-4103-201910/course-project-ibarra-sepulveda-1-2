<div class="container d-xl-flex justify-content-md-center">
  <div class="jumbotron justify-content-md-center">
    <div class="text-center">
      <h2>Edit Location</h2>
    </div>
    
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="row">
          
        <div class="form-group">
          <%= f.label :address %><br />
          <%= f.text_field :address, autofocus: true, autocomplete: "address", :class => 'form-control' %>
        </div>

        <div class="form-group">
            <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
            <%= f.password_field :current_password, autocomplete: "current-password", :class => 'form-control' %>
          </div>
          
        <div class="actions col-12 text-center">
          <%= f.submit "Update", :class => 'btn btn-info' %>
        </div>
      </div>
    <% end %>
</div>