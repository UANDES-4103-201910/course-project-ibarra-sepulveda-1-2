<div class="col-12 page-header text-center">
  <h1>Profiles</h1>
</div>
  <div class="col-lg-6">
    <div class="container">
      <div class="col-12"><br></div>
      <figure class="figure">
        <%= image_tag  @user.picture.medium.url, class: 'figure-img img-fluid rounded'%>
      </figure>
      
      <div class="col-12">
        <%= @user.biography %><br><br>
      </div>

      <div class="col-12">
        Name: <%= @user.first_name and @user.last_name%><br><br>
      </div>

      <div class="col-12">
        Email: <%= @user.email%><br><br>
      </div>

      <div class="col-12">
        Address: <%= @user.address %><br><br>
      </div> 

      <div>
        <p>
          <%= image_tag "https://maps.googleapis.com/maps/api/staticmap?zoom=17&size=400x300&markers=size:small%7Ccolor:red%7C#{@user.latitude},#{@user.longitude}&key=#{Rails.application.credentials.google_maps_api_key}", alt: "Map" %>
        </p>
      </div>
      
      <% if (current_user.id == @user.id) %>
        <div class="col-12">
          <%= link_to 'Edit', edit_user_registration_path(@user), :class => 'btn btn-info' %><br><br>
        </div>
      <% end %>
    </div>
  </div>
  <div class="col-lg-6">
    <%= render @posts %>
    <%= will_paginate @posts %>
  </div>
</div>