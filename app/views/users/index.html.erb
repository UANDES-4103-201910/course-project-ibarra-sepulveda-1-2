<div class="col-12 text-center">
  <h1>Users</h1>
</div>

<div class="col-md-2"></div>
<div class="col-md-8">
  <table class="table table-bordered">
    <thead>
      <tr class="text-center">
        <th> Name </th>
        <th> Email </th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.first_name %><%= user.last_name %></td>
          <td><%= user.email %></td>
          <td class="text-center"><%= link_to 'Show', user, :class => 'btn btn-info'%></td>
          <td class="text-center"><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-info' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<div class="col-md-2"></div>
