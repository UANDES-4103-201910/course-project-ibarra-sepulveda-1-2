	      </div>
	      <div class="col-12">
	              
	      </div>
	      <div class="col-12">
	        <%= post.text %>
	      </div>
	      <div class="col-12">
	        <div class="col-8"></div>
	        <div class="col-2"> </div>
	        <div class="col-2"> </div>
	      </div>
	    </div>
	  </div>
	</div>
<% end %>