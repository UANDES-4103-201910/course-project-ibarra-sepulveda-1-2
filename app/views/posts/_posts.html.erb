<% @posts.each do |post| %>
	<div class="col-sm-6 ">
		<div class="border border-primary">
	    <div class="col-2">    
	    </div>
	    <div class="col-10">
	      <div class="col-12 card-title">
	        <h4><%= post.title %></h4>
