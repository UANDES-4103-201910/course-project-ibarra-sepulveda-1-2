<div class="container">
	<div class="col-12">
		<% @user = User.where(id: @admin.user_id )[0] %>
		Name: <%= @user.first_name + @user.last_name %>
	</div>

	<div class="col-12">
		Email: <%= @user.email%>
	</div>

	<div class="col-12">
		Location: <%= @user.country %> / <%= @user.city %>
	</div>

	<div class="col-12">
		Create: <%= @admin.created_at %>
	</div>	
	
	<div class="col-12">
		Update: <%= @admin.updated_at %>
	</div>
	
	<div class="col-12"><br></div>

	<div class="col-12">
		<%= link_to 'Edit', edit_admin_path(@admin), :class => 'btn btn-info'  %> 
		<%= link_to 'Back', admins_path, :class => 'btn btn-info'  %>
	</div>
	<div class="col-12"><br></div>
</div>
