<div class="container">
	<div class="col-12">
		Name: <%= User.where(id: @admin )[0].first_name + User.where(id: @admin )[0].last_name %>
	</div>

	<div class="col-12">
		Email: <%= User.where(id: @admin )[0].email%>
	</div>

	<div class="col-12">
		Location: <%= User.where(id: @admin )[0].country %> / <%= User.where(id: @admin )[0].city %>
	</div>

	<div class="col-12">
		Create: <%= @admin.created_at %>
	</div>	
	
	<div class="col-12">
		Update: <%= @admin.updated_at %>
	</div>
	
	<div class="col-12"><br></div>

	<div class="col-12">
		<%= link_to 'Edit', edit_admin_path(@admin), :class => 'btn btn-info'  %> 
		<%= link_to 'Back', admins_path, :class => 'btn btn-info'  %>
	</div>
	<div class="col-12"><br></div>
</div>
